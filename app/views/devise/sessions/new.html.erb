<h2 class="form-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "simple-form" }) do |f| %>
  <div class="simple-form-container">
    <div class="form-group">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me, class: "form-checkbox" %>
        <%= f.label :remember_me, class: "form-label" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>

    <div class="form-bottom-links">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "form-link" %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "form-link" %>
    </div>
  </div>
<% end %>


<style type="text/css">
  .simple-form {
    width: 50%;
    margin: 0 auto;
    border: 2px solid #ccc;
    background-color: #f9f9f9;
    padding: 20px;
  }

  .form-title {
    padding: 20px 0;
    text-align: center;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .form-checkbox {
    margin-right: 5px;
  }

  .form-actions {
    text-align: center;
    margin-top: 20px;
  }
  .form-bottom-links {
    text-align: center;
    margin-top: 20px;
  }

  .form-link {
    margin-right: 10px;
    text-decoration: none;
    color: #007bff;
  }

  .form-link:hover {
    text-decoration: underline;
  }

</style>
