<h2 class="form-title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "simple-form" }) do |f| %>
  <div class="simple-form-container">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
    </div>
    <div class="form-bottom-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>



<style type="text/css">
  .simple-form {
    width: 50%;
    margin: 0 auto;
    border: 2px solid #ccc;
    background-color: #f9f9f9;
    padding: 20px;
  }

  .form-title {
    padding: 20px 0;
    text-align: center;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .form-actions {
    text-align: center;
    margin-top: 20px;
  }

  .form-bottom-links {
    text-align: center;
    margin-top: 20px;
  }

</style>
